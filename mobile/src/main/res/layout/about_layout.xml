                        android:visibility="gone"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/apps_heading"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_glimp"
                            android:textSize="14sp"
                            android:autoLink="web"
                            android:paddingTop="8dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_xdrip"
                            android:textSize="14sp"
                            android:paddingTop="8dp"
                            android:autoLink="all"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_aaps"
                            android:textSize="14sp"
                            android:paddingTop="8dp"
                            android:autoLink="all"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_libre_alarm"
                            android:textSize="14sp"
                            android:paddingTop="8dp"
                            android:autoLink="all"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_diabox"
                            android:textSize="14sp"
                            android:paddingTop="8dp"
                            android:autoLink="all"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
